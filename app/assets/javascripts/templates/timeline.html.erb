<md-content flex layout-padding>

  <div layout="row" layout-align="center">
    <md-input-container>
      <label>Search Timeline</label>
      <input ng-model="search" type="text">
    </md-input-container>
  </div>

<timeline layout="column">
  <timeline-event ng-repeat="doc in vm.timeline | filter: search">
    <timeline-badge>
      <md-icon md-svg-icon="<%= image_path('timeline_white.svg') %>"></md-icon>
    </timeline-badge>
    <timeline-panel class="{{doc.title}}">
      <timeline-heading>
        <h4 text-align="center">{{doc.title}}</h4>
        <md-button ng-click="vm.removeDoc(doc.id)" aria-label="remove">
            [remove]
          </md-button>
        </h4>

      </timeline-heading>
    </timeline-panel>
  </timeline-event>
</timeline>
